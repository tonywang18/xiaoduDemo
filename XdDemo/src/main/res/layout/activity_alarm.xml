<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131929"
    android:orientation="vertical">


    <com.gidisoft.paul.sdk.alarm.CustomClock
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="00dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能闹钟"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <!--        <ImageView-->
        <!--            android:id="@+id/one_img_view"-->
        <!--            android:layout_width="200dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:scaleType="centerInside"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:src="@mipmap/alarm2"/>-->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_btn"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:background="@mipmap/add"
            android:gravity="center"
            android:text="" />

        <Button
            android:id="@+id/remove_btn"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:background="@mipmap/del"
            android:gravity="center|right"
            android:text="" />



    </RelativeLayout>
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/index_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="序号"/>
        <TextView
            android:id="@+id/name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="事件"/>
        <TextView
            android:id="@+id/score_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="时间"/>
    </LinearLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="530dp"
        android:layout_height="66dp"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:background="@mipmap/alarmlist" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

    <Button
        android:id="@+id/back_btn"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginRight="100dp"
        android:background="@mipmap/del"
        android:gravity="center"
        android:text="返回" />
    </RelativeLayout>
</LinearLayout>